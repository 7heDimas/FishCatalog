// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  baits     Bait[]
}

model Bait {
  id       Int      @id @default(autoincrement())
  title    String
  size     Float
  color    String
  quantity Int
  user_id  Int
  user     User     @relation(fields: [user_id], references: [id])
  trophyes Trophy[]
}

model Trophy {
  id      Int    @id @default(autoincrement())
  name    String
  weight  Float?
  lenght  Float?
  bait_id Int
  baits   Bait   @relation(fields: [bait_id], references: [id])
}
